# If you want to use XFCE config tools...
#
#xfce-mcs-manager &

xinput disable `xinput list | grep TouchPad | grep -o "id=[0-9]\+" | cut -d'=' -f2` &
export QT_PLUGIN_PATH=$HOME/.kde4/lib/kde4/plugins/:/usr/lib/kde4/plugins/

# initialize display
xcompmgr &

# load primary apps
feh --bg-scale ~/Downloads/wp &
nm-applet &
kmix &
klipper &
batti &
tint2 &

# secondary apps
krunner &
yakuake &

# user apps
rssreader &
/opt/dropbox/dropbox &
kmail &
chromium &
konversation &
ktp-contactlist &
