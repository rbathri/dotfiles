# Path to your oh-my-zsh configuration.
export DOTFILES=$HOME/.dotfiles

# Let the magic begin
source $DOTFILES/ohmyzsh-common/zshrc
for config_file ($DOTFILES/ohmyzsh-mac/*.zsh) source $config_file

# my aliases
alias vm='/Applications/VirtualBox.app/Contents/Resources/VirtualBoxVM.app/Contents/MacOS/vmstarter ~/VirtualBox\ VMs/Arch\ Box/Arch\ Box.vbox'
x=$(sysctl -n hw.ncpu)

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
PATH=$HOME/.rvm/bin:/usr/local/bin:/usr/local/sbin:$PATH # Add /usr/local to PATH
